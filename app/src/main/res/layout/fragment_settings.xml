<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:padding="10dp"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/timeWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_window"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            />


        <SeekBar
            android:id="@+id/timeSeekBar"
            android:max="60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="30"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/crimeRadiusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crime_map"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            />


        <SeekBar
            android:id="@+id/distanceSeekBar"
            android:max="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="10"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/notificationsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            />

        <Switch
            android:id="@+id/allowNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notificationsLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>